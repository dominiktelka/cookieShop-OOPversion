<h1>Configure your cookie</h1>

<h2>Select cookie base</h2>

{{>base-selected}}

<h2>Select your favorite addons</h2>

{{#each allAddons}}
    {{#if (isInArray @root.cookie.addons this.[0])}}
        <a href="/configurator/delete-addon/{{this.[0]}}" class="btn-disabled">REMOVE {{this.[0]}} for {{this.[1]}} PLN</a>
    {{else}}
        <a href="/configurator/added/{{this.[0]}}" class="btn">ADD {{this.[0]}} for {{this.[1]}} PLN</a>
    {{/if}}

{{/each}}


{{#if cookie.base}}
    {{> cookie-preview}}
    {{> addons}}
    <a href="/order/summary" class="btn btn-big"><img src="/assets/images/shopping-cart.png" class="cart-img">Order Now</a>
{{else}}
    <div class="error"><p><strong>Please select base of your cookie to see it's preview and price summary.</strong></p>
        {{>base-selected}}</div>
{{/if}}